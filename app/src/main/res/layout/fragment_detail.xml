<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="net.alteridem.sunshine.DetailActivity.WeatherDetailFragment">

        <TextView
            android:id="@+id/fragment_detail_friendly_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="Today" />

        <TextView
            android:id="@+id/fragment_detail_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/fragment_detail_friendly_date"
            android:paddingBottom="18dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="italic"
            tools:text="July 12" />

        <LinearLayout
            android:id="@+id/fragment_detail_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_detail_date"
            android:orientation="horizontal"
            android:paddingBottom="24dp">

            <LinearLayout
                android:id="@+id/fragment_detail_lef_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_detail_date"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="24dp">

                <TextView
                    android:id="@+id/fragment_detail_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="36dp"
                    tools:text="22°" />

                <TextView
                    android:id="@+id/fragment_detail_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    tools:text="18°" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_detail_right_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="24dp">

                <ImageView
                    android:id="@+id/fragment_detail_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    tools:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/fragment_detail_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    tools:text="Cloudy" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/fragment_detail_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/fragment_detail_layout"
            android:paddingBottom="6dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:text="Humidity: 84%" />

        <TextView
            android:id="@+id/fragment_detail_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/fragment_detail_humidity"
            android:paddingBottom="6dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:text="Wind: 6 km/H NW" />

        <TextView
            android:id="@+id/fragment_detail_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/fragment_detail_wind"
            android:paddingBottom="6dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:text="Pressure: 1014 hPa" />

    </RelativeLayout>
</ScrollView>