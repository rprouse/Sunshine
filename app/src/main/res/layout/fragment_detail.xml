<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="net.alteridem.sunshine.DetailActivity.WeatherDetailFragment">

        <TextView
            android:id="@+id/fragment_detail_friendly_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:fontFamily="sans-serif-condensed"
            tools:text="Today" />

        <TextView
            android:id="@+id/fragment_detail_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="18dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#646464"
            tools:text="July 12" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:paddingBottom="24dp"
            android:paddingLeft="16dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="24dp">

                <TextView
                    android:id="@+id/fragment_detail_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="96sp"
                    android:fontFamily="sans-serif-light"
                    tools:text="22°" />

                <TextView
                    android:id="@+id/fragment_detail_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="48sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#646464"
                    tools:text="18°" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fragment_detail_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    tools:src="@drawable/art_clouds" />

                <TextView
                    android:id="@+id/fragment_detail_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="22sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#646464"
                    tools:text="Cloudy" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/fragment_detail_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:textSize="22sp"
            android:fontFamily="sans-serif-light"
            tools:text="Humidity: 84%" />

        <TextView
            android:id="@+id/fragment_detail_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:textSize="22sp"
            android:fontFamily="sans-serif-light"
            tools:text="Wind: 6 km/H NW" />

        <TextView
            android:id="@+id/fragment_detail_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:fontFamily="sans-serif-light"
            tools:text="Pressure: 1014 hPa" />

    </LinearLayout>
</ScrollView>