<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.alteridem.sunshine.DetailActivity.WeatherDetailFragment">

    <TextView
        android:id="@+id/fragment_detail_friendly_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="Today" />

    <TextView
        android:id="@+id/fragment_detail_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="July 12" />

    <TextView
        android:id="@+id/fragment_detail_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Cloudy" />

    <TextView
        android:id="@+id/fragment_detail_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="22°" />

    <TextView
        android:id="@+id/fragment_detail_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="18°" />

    <TextView
        android:id="@+id/fragment_detail_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="Humidity: 84%" />

    <TextView
        android:id="@+id/fragment_detail_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="Wind: 6 km/H NW" />

    <TextView
        android:id="@+id/fragment_detail_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="Pressure: 1014 hPa" />

</LinearLayout>
